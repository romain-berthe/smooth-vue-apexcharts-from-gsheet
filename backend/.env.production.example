# Backend environment example (production)
# Copy to `.env` for production deployments and set the values.

# Mandatory: listening port
PORT=3002

# Mandatory: use production to enable secure cookies
NODE_ENV=production

# Mandatory: list of allowed Google OAuth Client IDs (comma-separated)
# Must include the same value used by the frontend (VITE_GOOGLE_CLIENT_ID)
GOOGLE_CLIENT_IDS=YOUR_PROD_OAUTH_CLIENT_ID.apps.googleusercontent.com

# Mandatory: strong secret for signing the session cookie
SESSION_SECRET=CHANGE_ME_STRONG_SECRET

# Mandatory: allowed frontend origin (CORS + cookies) â€” public HTTPS URL of the frontend
FRONTEND_ORIGIN=https://kpis.example.com

# Mandatory for Sheets proxy via Service Account
GOOGLE_SA_EMAIL=svc-kpis-gsheet@your-project.iam.gserviceaccount.com
# NOTE: keep line breaks as \n in env files
GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Mandatory: spreadsheet ID used by the backend Sheets proxy
SHEETS_ID=YOUR_SPREADSHEET_ID

# Optional: default A1 range used when none provided
SHEETS_DEFAULT_RANGE=A1:Z200

# Access allowlist (at least one of these must be non-empty in production)
AUTH_ALLOWED_EMAILS=
AUTH_ALLOWED_DOMAINS=
