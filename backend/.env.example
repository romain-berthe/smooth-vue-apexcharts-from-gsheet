# Backend environment example
# Copy to `.env` and set the values for your environment.

# Mandatory: listening port
PORT=3001

# Mandatory: environment (production|development)
# Use production in real deployments to enable secure cookies
NODE_ENV=production

# Mandatory: list of allowed Google OAuth Client IDs (comma-separated)
# Must include the same value used by the frontend (VITE_GOOGLE_CLIENT_ID)
GOOGLE_CLIENT_IDS=YOUR_OAUTH_CLIENT_ID.apps.googleusercontent.com

# Mandatory: session cookie signing secret (use a strong random string)
SESSION_SECRET=CHANGE_ME_STRONG_SECRET

# Mandatory: allowed frontend origin (CORS + cookies)
# Example (prod): https://kpis.example.com
# Example (dev):  http://localhost:8080
FRONTEND_ORIGIN=http://localhost:8080

# Mandatory for Sheets proxy via service account
GOOGLE_SA_EMAIL=
# NOTE: keep line breaks as \n in env files
GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Mandatory: spreadsheet ID used by the backend Sheets proxy
SHEETS_ID=

# Optional: default A1 range used when none provided
SHEETS_DEFAULT_RANGE=A1:Z100

# Access allowlist, separated by comma (at least one of these must be non-empty)
# If both are empty, all logins are refused (secure-by-default)
AUTH_ALLOWED_EMAILS=
AUTH_ALLOWED_DOMAINS=
